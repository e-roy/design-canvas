{
  "rules": {
    "presence": {
      "$canvasId": {
        ".read": "auth != null",
        "$uid": { ".write": "$uid === auth.uid" }
      }
    },
    "locks": {
      "$canvasId": {
        ".read": "auth != null",
        "$shapeId": {
          ".write": "(!data.exists() && newData.child('userId').val() === auth.uid) || (data.child('userId').val() === auth.uid)"
        }
      }
    },
    "canvas_cursors": {
      "$canvasId": {
        ".read": "auth !== null",
        "$userId": {
          ".write": "auth !== null && auth.uid === $userId"
        }
      }
    }
  }
}
