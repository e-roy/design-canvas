# Firebase Configuration
FIREBASE_API_KEY=your_firebase_api_key
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour private key here\n-----END PRIVATE KEY-----\n"

# Firebase Client Configuration (for frontend)
NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_firebase_project_id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_messaging_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_firebase_app_id

# Cookie Secret (should be at least 32 characters)
# node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
COOKIE_SECRET=your-super-secret-cookie-key-at-least-32-chars-long

# Next.js Environment
NODE_ENV=development

# Firebase Emulators (set to "true" to use emulators in development)
NEXT_PUBLIC_USE_FIREBASE_EMULATORS=true

# Firebase Admin SDK Emulator (required for AI tool to use emulators)
# IMPORTANT: This must be set in .env.local for AI commands to write to emulator
FIRESTORE_EMULATOR_HOST=localhost:8080

# OpenAI API Key (for AI Canvas Assistant)
OPENAI_API_KEY=your_openai_api_key_here

# Firebase Admin SDK Service Account (for server-side AI tool execution)
# Get this from Firebase Console > Project Settings > Service Accounts > Generate New Private Key
# Paste the entire JSON as a single-line string, or use the individual fields above
FIREBASE_SERVICE_ACCOUNT={"type":"service_account","project_id":"your-project",...}