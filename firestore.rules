rules_version = '2';
service cloud.firestore {
  match /databases/{db}/documents {
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function getUserId() {
      return request.auth.uid;
    }
    
    // Canvas documents - allow read/write for authenticated users
    match /canvas_documents/{documentId} {
      allow read, write: if isAuthenticated();
    }
    
    // Pages - allow read/write for authenticated users
    match /canvases/{canvasId}/pages/{pageId} {
      allow read, write: if isAuthenticated();
    }
    
    // Nodes - allow read/write for authenticated users
    match /canvases/{canvasId}/nodes/{nodeId} {
      allow read, write: if isAuthenticated();
    }
    
    // Legacy canvas_shapes - allow read/write for authenticated users
    match /canvas_shapes/{shapeId} {
      allow read, write: if isAuthenticated();
    }
    
    // AI Chat messages - users can only access their own chat history
    match /canvasChats/{userId}/messages/{messageId} {
      allow read, write: if isAuthenticated() && getUserId() == userId;
    }
  }
}